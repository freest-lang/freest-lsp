{
  "name": "freest-lsp",
  "version": "1.0.0",
  "displayName": "FreeST LSP",
  "description": "FreeST language support powered by the FreeST language server",
  "icon": "resources/FreeST.png",
  "publisher": "diogofpbarros",
  "author": "Diogo Barros",
  "license": "BSD",
  "repository": {
    "type": "git",
    "url": "https://github.com/freest-lang/freest-lsp"
  },
  "categories": [
    "Programming Languages",
    "Language Packs",
    "Linters"
  ],
  "keywords": [
    "freest",
    "linter",
    "fst"
  ],
  "engines": {
    "vscode": "^1.63.0"
  },
  "devDependencies": {
    "@types/node": "^14.17.0",
    "typescript": "^4.6.2"
  },
  "activationEvents": [
    "onLanguage:FreeST",
    "onCommand:freest.run",
    "onCommand:freest.load"
  ],
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "install": "cd client && npm install && cd .."
  },
  "contributes": {
    "languages": [
      {
        "id": "FreeST",
        "aliases": [
          "freest",
          "fst"
        ],
        "extensions": [
          ".fst",
          ".freest"
        ]
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "freest.run",
          "when": "editorTextFocus"
        },
        {
          "command": "freest.load",
          "when": "editorTextFocus"
        }
      ]
    },
    "commands": [
      {
        "command": "freest.run",
        "title": "FreeST: Run"
      },
      {
        "command": "freest.load",
        "title": "FreeST: Load into interpreter"
      }
    ]
  }
}
