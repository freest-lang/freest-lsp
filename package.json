{
  "name": "freest-lsp",
  "displayName": "FreeST LSP",
  "description": "FreeST language support powered by the FreeST language server",
  "icon": "resources/FreeST.png",
  "version": "1.0.0",
  "author": "Diogo Barros",
  "license": "ISC",
  "categories": ["Programming Languages"],
  "keywords": [
    "freest"
  ],
  "engines": {
    "vscode": "^1.63.0"
  },
  "activationEvents": [
    "onLanguage:FreeST",
    "onCommand:freest.run",
    "onCommand:freest.load"
  ],
  "main": "./client/out/extension",
  "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd .."
	},
  "devDependencies": {
    "@types/node": "^14.17.0",
    "typescript": "^4.6.2"
  },
  "contributes": {
    "languages": [{
        "id": "FreeST",
        "aliases": ["freest", "fst"],
        "extensions": [".fst", ".freest"]
    }],
    "menus": {
      "editor/context": [
        {
          "command": "freest.run",
          "when": "editorTextFocus"
        },
        {
          "command": "freest.load",
          "when": "editorTextFocus"
        }
      ]
    },
    "commands": [
      {
        "command": "freest.run",
        "title": "FreeST: Run"
      },
      {
        "command": "freest.load",
        "title": "FreeST: Load into interpreter"
      }
    ]
  }
}
